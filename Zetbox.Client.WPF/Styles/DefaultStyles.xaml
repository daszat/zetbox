    <!-- Nu-Style -->

    <Color x:Key="{x:Static styles:Defaults.MainBackgroundKey}">#FFdddddd</Color>
    <Color x:Key="{x:Static styles:Defaults.MainForegroundKey}">#FF000000</Color>
    <!-- company color 1 -->
    <Color x:Key="{x:Static styles:Defaults.MainAccentKey}">#FF707f87</Color>
    <Color x:Key="{x:Static styles:Defaults.MainAccentForegroundKey}">#FFFFFFFF</Color>
    <!-- company color 3 -->
    <Color x:Key="{x:Static styles:Defaults.MainHighlightKey}">#FFAA272F</Color>
    <Color x:Key="{x:Static styles:Defaults.MainHighlightForegroundKey}">#FFFFFFFF</Color>
    <Color x:Key="{x:Static styles:Defaults.MainBorderKey}">#FFdddddd</Color>

    <Color x:Key="{x:Static styles:Defaults.SecondaryBackgroundKey}">#FFc2e0ff</Color>
    <Color x:Key="{x:Static styles:Defaults.SecondaryForegroundKey}">#FF000000</Color>
    <!-- company color 2 -->
    <Color x:Key="{x:Static styles:Defaults.SecondaryAccentKey}">#FF003C64</Color>
    <Color x:Key="{x:Static styles:Defaults.SecondaryAccentForegroundKey}">#FFFFFFFF</Color>
    <!-- company color 3 -->
    <Color x:Key="{x:Static styles:Defaults.SecondaryHighlightKey}">#FFAA272F</Color>
    <Color x:Key="{x:Static styles:Defaults.SecondaryHighlightForegroundKey}">#FFFFFFFF</Color>
    <Color x:Key="{x:Static styles:Defaults.SecondaryBorderKey}">#FFc2e0ff</Color>

    <Color x:Key="{x:Static styles:Defaults.TertiaryBackgroundKey}">#FFFFFFFF</Color>
    <Color x:Key="{x:Static styles:Defaults.TertiaryForegroundKey}">#FF000000</Color>
    <!-- company color 1 -->
    <Color x:Key="{x:Static styles:Defaults.TertiaryAccentKey}">#FF707f87</Color>
    <Color x:Key="{x:Static styles:Defaults.TertiaryAccentForegroundKey}">#FFFFFFFF</Color>
    <!-- company color 3 -->
    <Color x:Key="{x:Static styles:Defaults.TertiaryHighlightKey}">#FFAA272F</Color>
    <Color x:Key="{x:Static styles:Defaults.TertiaryHighlightForegroundKey}">#FFFFFFFF</Color>
    <Color x:Key="{x:Static styles:Defaults.TertiaryBorderKey}">#00000000</Color>

    <!-- sizes -->
    <s:Double x:Key="BigFontSize">16</s:Double>
    <s:Double x:Key="LargeFontSize">14</s:Double>
    <s:Double x:Key="NormalFontSize">12</s:Double>
    <s:Double x:Key="SmallFontSize">10</s:Double>

    <s:Double x:Key="BigControlHeight">24</s:Double>
    <s:Double x:Key="LargeControlHeight">21</s:Double>
    <s:Double x:Key="NormalControlHeight">18</s:Double>
    <s:Double x:Key="SmallControlHeight">15</s:Double>

    <Thickness x:Key="AreaGroup1Margin">2</Thickness>
    <Thickness x:Key="AreaGroup1Padding">2</Thickness>
    <Thickness x:Key="ItemGroup1Margin">2</Thickness>
    <Thickness x:Key="ItemGroup1Padding">2</Thickness>
    <Thickness x:Key="ItemMargin">2</Thickness>

</ResourceDictionary>