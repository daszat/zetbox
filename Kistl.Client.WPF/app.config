<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net"
             type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  <appSettings>
    <add key="serviceUri" value="http://localhost:57820/Kistlservice.facade" />
    <!--<add key="serviceUri" value="http://localhost:6666/ZBox/Kistlservice.facade" />-->
    <!--<add key="serviceUri"
             value="http://squeeze/ZBox/Kistlservice.facade" />-->
    <!--<add key="serviceUri" value="http://db-server/Kistlservice.facade" />-->
    <add key="ShowDebugConsole"
         value="true"/>
  </appSettings>
  <system.serviceModel>
    <!-- Binding -->
    <bindings>
      <wsHttpBinding>
        <binding name="KistlService_Binding"
                 closeTimeout="00:01:00"
                 openTimeout="00:01:00"
                 receiveTimeout="10:00:00"
                 sendTimeout="00:01:00"
                 bypassProxyOnLocal="true"
                 transactionFlow="false"
                 hostNameComparisonMode="StrongWildcard"
                 maxBufferPoolSize="524288"
                 maxReceivedMessageSize="6553600"
                 messageEncoding="Text"
                 textEncoding="utf-8"
                 useDefaultWebProxy="true"
                 allowCookies="false">
          <security mode="Message">
            <message clientCredentialType="Windows" />
          </security>
          <readerQuotas maxStringContentLength="1600000000"
                        maxArrayLength="1600000000" />
          <reliableSession enabled="false" />
        </binding>
      </wsHttpBinding>
    </bindings>
    <!-- Client -->
    <client>
      <endpoint address="http://localhost:6666/KistlService"
                binding="wsHttpBinding"
                bindingConfiguration="KistlService_Binding"
                contract="KistlService.IKistlService"
                name="KistlService_Endpoint" />
    </client>
  </system.serviceModel>
  <log4net>
    <appender name="ColoredConsoleAppender"
              type="log4net.Appender.ColoredConsoleAppender" >
      <mapping>
        <level value="INFO" />
        <foreColor value="Cyan" />
      </mapping>
      <mapping>
        <level value="INFO" />
        <foreColor value="White" />
      </mapping>
      <mapping>
        <level value="WARN" />
        <foreColor value="Yellow, HighIntensity" />
      </mapping>
      <mapping>
        <level value="ERROR" />
        <foreColor value="Red, HighIntensity" />
      </mapping>
      <mapping>
        <level value="FATAL" />
        <foreColor value="Purple, HighIntensity" />
      </mapping>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%message%newline" />
      </layout>
    </appender>
    <appender name="TraceAppender"
              type="log4net.Appender.TraceAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
      </layout>
    </appender>
    <appender name="RollingLogFileAppender"
              type="log4net.Appender.RollingFileAppender">
      <file value="Kistl.Client.WPF.log" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="5" />
      <maximumFileSize value="1MB" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
      </layout>
    </appender>
    <appender name="PerfCounterMainAppender" type="log4net.Appender.RollingFileAppender">
      <file value="Kistl.Client.WPF.PerfCounter.Main.csv" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="5" />
      <maximumFileSize value="1MB" />
      <layout type="log4net.Layout.PatternLayout">
        <header value="Date;QueriesTotal;QueriesObjectsTotal;QueriesSumDuration;QueriesAvgDuration;GetListTotal;GetListObjectsTotal;GetListSumDuration;GetListAvgDuration;GetListOfTotal;GetListOfObjectsTotal;GetListOfSumDuration;GetListOFAvgDuration;FetchRelationTotal;FetchRelationObjectsTotal;FetchRelationSumDuration;FetchRelationAvgDuration;ServerMethodInvocation;SetObjectsTotal;SetObjectsObjectsTotal;SetObjectsSumDuration;SetObjectsAvgDuration;SubmitChangesTotal;SubmitChangesObjectsTotal;SubmitChangesSumDuration;SubmitChangesAvgDuration;ViewModelFetch;ViewModelCreate&#13;&#10;" />
        <conversionPattern value="%date; %message%newline" />
      </layout>
    </appender>
    <appender name="PerfCounterObjectsAppender" type="log4net.Appender.RollingFileAppender">
      <file value="Kistl.Client.WPF.PerfCounter.Objects.csv" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="5" />
      <maximumFileSize value="1MB" />
      <layout type="log4net.Layout.PatternLayout">
        <header value="Date;Name;QueriesTotal;QueriesObjectsTotal;QueriesSumDuration;QueriesAvgDuration;GetListTotal;GetListObjectsTotal;GetListSumDuration;GetListAvgDuration;GetListOfTotal;GetListOfObjectsTotal;GetListOfSumDuration;GetListOfAvgDuration;FetchRelationObjectsTotal;FetchRelationTotal;FetchRelationSumDuration;FetchRelationAvgDuration&#13;&#10;" />
        <conversionPattern value="%date; %message%newline" />
      </layout>
    </appender>
    <appender name="PerfCounterMethodsAppender" type="log4net.Appender.RollingFileAppender">
      <file value="Kistl.Client.WPF.PerfCounter.Methods.csv" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="5" />
      <maximumFileSize value="1MB" />
      <layout type="log4net.Layout.PatternLayout">
        <header value="Date;Thread;Context;Name;Duration;Message&#13;&#10;" />
        <conversionPattern value="%date;%thread;%property{NDC};%message%newline" />
      </layout>
    </appender>
    <root>
      <level value="INFO" />
      <appender-ref ref="ColoredConsoleAppender" />
      <appender-ref ref="TraceAppender" />
      <appender-ref ref="RollingLogFileAppender" />
    </root>
    <logger name="Kistl.Facade">
      <level value="INFO" />
    </logger>
    <logger name="Kistl.Linq">
      <level value="WARN" />
    </logger>
    <logger name="Kistl.Reflection">
      <level value="WARN" />
    </logger>
    <logger name="Kistl.AssemblyLoader">
      <level value="DEBUG" />
    </logger>
    <logger name="Kistl.Client">
      <level value="INFO" />
    </logger>
    <logger name="Kistl.Client.WPF.SplashScreen">
      <level value="DEBUG" />
    </logger>
    <logger name="Kistl.PerfCounter.Main">
      <additivity value="false"/>
      <level value="DEBUG" />
      <appender-ref ref="PerfCounterMainAppender"/>
    </logger>
    <logger name="Kistl.PerfCounter.Objects">
      <additivity value="false"/>
      <level value="DEBUG" />
      <appender-ref ref="PerfCounterObjectsAppender"/>
    </logger>
    <logger name="Kistl.PerfCounter.Methods">
      <additivity value="false"/>
      <level value="DEBUG" />
      <appender-ref ref="PerfCounterMethodsAppender"/>
    </logger>
  </log4net>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <probing privatePath="Common\Core;Common\Core.Generated;Common\App.ZBox;Common\App.Ini50;Client\Core;Client\Core.Generated;Client\WPF;Client\App.ZBox;Client\App.Ini50"/>
    </assemblyBinding>
  </runtime>
  <system.net>
    <mailSettings>
      <!-- default smtp configuration to send to @dasz.at addresses -->
      <smtp deliveryMethod="Network">
        <network
            host="hosting.edv-bus.at"
            port="25"
            defaultCredentials="false" />
        <!-- enableSsl="true" requires .NET 4.0 -->
      </smtp>
    </mailSettings>
  </system.net>
</configuration>