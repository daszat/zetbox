@model NullableGuidPropertyViewModel

@using Zetbox.API
@using Zetbox.Client.Presentables.ValueViewModels

@if (Model.IsReadOnly)
{
    @Html.DisplayFor(m => m.FormattedValue, new { @class = ViewData["class"] })
}
else
{
    @Html.TextBoxFor(m => m.FormattedValue, null, new { @class = "form-control " + ViewData["class"], placeholder = Model.ToolTip })
    @Html.ZbValidationMessageFor(m => m)
}
