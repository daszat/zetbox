@model ObjectReferenceViewModel

@using Zetbox.Client.ASPNET
@using Zetbox.Client.Presentables
@using Zetbox.Client.Presentables.ValueViewModels

@Html.DropDownListFor(
    m => m.ValueID,
    Model.PossibleValues
         .Select(i => new SelectListItem()
         {
            Text = i.Name,
            Value = i is DataObjectViewModel ? ((DataObjectViewModel)i).ID.ToString() : string.Empty
         }),
    string.Empty,  // Add empty value, PossibleValues don't return a empty value
    new { @class = "form-control " + ViewData["class"], placeholder = Model.ToolTip }
)
@Html.ValidationMessageFor(m => m)